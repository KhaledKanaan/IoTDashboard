    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_margin="10dp"
                android:textColor="@color/color_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=" By using IoTDashboard App, you confirm that you read and agreed to the End-User License Agreement (EULA) and to the Privacy Policy linked below.">
            </TextView>

            <TextView
                android:textColor="@color/color_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EULA_link"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:onClick="licenseAgreement">
            </TextView>

            <TextView
                android:textColor="@color/color_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_link"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="privacyPolicy">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/agreeButton"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="@color/color_1"
                android:elevation="10dp"
                android:layout_marginBottom="5dp"
                android:translationZ="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="agreeToConditions"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Proceed"
                    android:textAllCaps="false"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    >

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/disagreeButton"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="@color/color_4"
                android:elevation="10dp"
                android:layout_marginBottom="15dp"
                android:translationZ="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="disagreeToConditions"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Exit"
                    android:textAllCaps="false"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    >

                </TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>